@model Business.Follow

@{
    ViewData["Title"] = "Chỉnh sửa Follow";
}
@section Style {
    <style>
        .form-check .form-check-input {
            margin-left: 0px !important;
        }
    </style>
}
<div class="container bdlayout">
    <h2 class="h2-title bg4 text-white">Chỉnh sửa Follow</h2>

    <div class="container my-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdFollow" />

            <div class="form-group form-check col-md-6">
                <label class="form-check-label">
                    @Html.DisplayNameFor(model => model.Active) <br />
                    <input class="form-check-input" asp-for="Active" /> 
                </label>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="IdFollower" class="control-label"></label>
                <select asp-for="IdFollower" class="form-control" asp-items="ViewBag.IdFollower">
                    <option value="">Chọn Người Follow</option>
                </select>
                <span asp-validation-for="IdFollower" class="text-danger"></span>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="IdFollowing" class="control-label"></label>
                <select asp-for="IdFollowing" class="form-control" asp-items="ViewBag.IdFollowing">
                    <option value="">Chọn Người Đang Follow</option>
                </select>
                <span asp-validation-for="IdFollowing" class="text-danger"></span>
            </div>

            <div class="form-group btnGround">
                <input type="submit" value="Lưu" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Trở về</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
