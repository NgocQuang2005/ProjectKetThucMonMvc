@model Business.EventParticipants

@{
    ViewData["Title"] = "Edit";
}

@section Style {
    <style>
        .form-check .form-check-input {
            margin-left: 0px !important;
        }
    </style>
}

<div class="container bdlayout">
    <h2 class="h2-title bg4 text-white">Edit Event Participant</h2>

    <div class="container my-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdEventParticipant" />

            <div class="row">
                <div class="form-group form-check col-md-6">
                    <label class="form-check-label">
                        @Html.DisplayNameFor(model => model.Active) <br />
                        <input class="form-check-input" asp-for="Active" />
                    </label>
                </div>

                <div class="form-group col-md-6">
                    <label asp-for="IdEvent" class="control-label"></label>
                    <select asp-for="IdEvent" class="form-control" asp-items="ViewBag.IdEvent">
                        <option value="">Chọn Sự Kiện</option>
                    </select>
                    <span asp-validation-for="IdEvent" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6">
                    <label asp-for="IdAc" class="control-label"></label>
                    <select asp-for="IdAc" class="form-control" asp-items="ViewBag.IdAc">
                        <option value="">Chọn Người Dùng</option>
                    </select>
                    <span asp-validation-for="IdAc" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6">
                    <label asp-for="RegistrationTime" class="control-label"></label>
                    <input asp-for="RegistrationTime" class="form-control" />
                    <span asp-validation-for="RegistrationTime" class="text-danger"></span>
                </div>

                <div class="form-group btnGround">
                    <input type="submit" value="Lưu" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Trở về</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
